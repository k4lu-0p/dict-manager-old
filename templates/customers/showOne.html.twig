        <button id="button-search-customer" class="opacity-zero"><i data-action="edit"  class='uil uil-pen'></i></button>
            
        <div class="d-flex justify-content-center align-items-center">
            <h4 class="text-center p-3">{{ customer.firstname }} {{ customer.lastname }}</h4>
        </div>

        <button id="button-add-customer" data-action="new" class="new"><i class='uil uil-plus' data-action="new"></i></button>
