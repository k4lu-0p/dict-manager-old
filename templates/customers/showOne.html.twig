<div class="container container-customer">

    {# // Message de confirmation de suppression #}
    <div class="container-warning">
        <div class="wrapper-warning d-flex flex-column justify-content-around align-items-center p-3">
            <h4>Do you really want to delete <strong><span id="confirm-delete-customer-fullname">{{ customer.firstname }} {{ customer.lastname }}</span></strong> ?</h4>
            <div class="wrapper-button-confirm d-flex justify-content-around align-items-center w-100">
                <button id="confirm-delete-customer-no" class="btn btn-info" data-action="no">Cancel</button>
                <button id="confirm-delete-customer-yes" class="btn btn-danger" data-action="yes">Confirm</button>
            </div>
        </div>
    </div>

    {# // Card #}    
    <div class="">
        <div class="mx-auto my-4 customer-profile-picture" style="background-image: url(/uploads/pictures/{{ customer.picture }});">
            <button class="button-edit-customer-profile " data-id="{{ customer.id }}" data-action="edit"><i class='uil uil-edit'
                data-action="edit" data-id="{{ customer.id }}"></i></button>
        </div>
        <p class="p-0 m-0" > Firstname : {{ customer.firstname }}</p>
        <p class="p-0 m-0" >Lastname : {{ customer.lastname }}</p>
        <p class="p-0 m-0" >Registration date : {{ customer.createdAt | date("m/d/Y") }}</p>
        <p class="p-0 m-0" >Phone : <a class="customer-phone p-0 m-0" href="tel:{{ customer.phone }}">{{ customer.phone }}</a></p>
        <p class="p-0 m-0" >Email : <a class="customer-address-number p-0 m-0" href="mailto:{{ customer.email }}">{{ customer.email }}</a></p>
        <p class="p-0 m-0" >Send a message with <a href="https://wa.me/33760132568?text=Hi%20{{ customer.firstname }}%2C%20">WhatsApp</a></p>       
    </div>

    {# // Buttons d'actions #}
    <div class="d-flex flex-row justify-content-start align-items-center p-2 m-0">
        <button class="button-delete-customer btn " data-id="{{ customer.id }}" data-action="delete">Delete</button>
    </div>

</div>

