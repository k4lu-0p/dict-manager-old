    {% for customer in customers %}
    <div class="card card-customers my-1">
        <p class="p-0 m-0">{{ customer.firstname }}</p>
        <p class="p-0 m-0">{{ customer.lastname }}</p>
        <p class="p-0 m-0">{{ customer.phone }}</p>
        <p class="p-0 m-0">{{ customer.addressNumber }}</p>

        // Champ cach√© contenant l'ID du client        
        <input id="customer-{{ customer.id }}" type="hidden" value="{{ customer.id }}">

        <button class="button-show-customer" data-action="show">Details</button>
        <button class="button-edit-customer" data-action="edit">Edit</button>
        <button class="button-delete-customer" data-action="delete">Delete</button>
    </div>
    {% endfor %}

</div>